{
    "python.pythonPath": "/usr/bin/python3",
    "editor.fontSize": 14,
    "workbench.colorTheme": "Gruvbox Dark Hard",
    "editor.lineNumbers": "relative",
    // vim related setting
    "vim.useCtrlKeys": true,
    "vim.hlsearch": true,
    "vim.leader": "<space>",
    "vim.handleKeys": {
      "<C-a>": false,
    },
    "vim.insertModeKeyBindings": [
        {
          // map jj to ESC to exit insert mode 
          "before": ["j", "j"],
          "after": ["<Esc>"],
        },
    ],
    "vim.normalModeKeyBindings": [
      {
        // gt to nextTab like chrome
        "before": ["g", "t"],
        "commands": ["workbench.action.nextEditor"],
        "when": "editorTextFocus",
        "silent": true,
      },
      {
        // gT to prevTab like chrome
        "before": ["g", "shift+t"],
        "commands": ["workbench.action.previousEditor"],
        "when": "editorTextFocus",
        "silent": true,
      },
      {
        // goto definition with ctrl + f in normal mode
        "before": ["C-f"],
        "commands": ["editor.action.revealDefinition"],
        "when": "editorTextFocus",
        "silent": true,
      },
      {
        // <Learder> + cn go to next error 
        "before": ["<Leader>", "c", "n"],
        "commands": ["editor.action.marker.nextInFiles"],
        "when": "editorTextFocus",
        "silent": true,
      },
      {
        // <Leader> + cp go to pervious error 
        "before": ["<Leader>", "c", "p"],
        "commands": ["editor.action.marker.prevInFiles"],
        "when": "editorTextFocus",
        "silent": true,
      },
    ],
    // open with full screen
    "window.restoreFullscreen": true,
    "window.newWindowDimensions": "maximized",
    "workbench.editor.restoreViewState": true,
    // open terminal on the rightside
    "workbench.panel.defaultLocation": "right",
    "editor.inlineSuggest.enabled": true,
    "timeline.excludeSources": [],
    // remote SSH with local extensions
    "remote.extensionKind": {
      // remote plugin
      "ms-python.python": ["workspace"],
      "ms-python.vscode-pylance": ["workspace"],
      "ms-vscode.cpptools": ["workspace"],
      "rlivings39.fzf-quick-open": ["workspace"],
      // local plugin
      "njpwerner.autodocstring": ["ui"],
      "GitHub.copilot": ["ui"],
      "eamodio.gitlens": ["ui"],
      "jdinhlife.gruvbox": ["ui"],
      "yzhang.markdown-all-in-one": ["ui"],
      "ms-vscode-remote.remote-ssh": ["ui"],
      "vscodevim.vim": ["ui"],
      "streetsidesoftware.code-spell-checker": ["ui"],
    },
    // linter
    "python.linting.flake8Enabled": true,
    // docstring setting
    "autoDocstring.docstringFormat": "google",
    // other setting generated by VSCode
    "workbench.editor.enablePreview": false,
    "security.workspace.trust.untrustedFiles": "open",
    "workbench.startupEditor": "none",
}
